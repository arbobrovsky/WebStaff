@model Presentation.Models.SubDepartmentViewModel

@{
    ViewData["Title"] = "CreateSubDepartment";
}

<h2>CreateSubDepartment</h2>
<link href="~/Docs/StyleSheet.css" rel="stylesheet" />
<h4>SubDepartmentViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSubDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <select name="DepartmentId" asp-for="@Model.DepartmentId" class="uk-select" asp-items="@(new SelectList (Model.Departments,"DepartmentId","Name"))"></select>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
